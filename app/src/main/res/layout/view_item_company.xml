<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/margin_medium_2">
        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ivCompany"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_centerHorizontal="true"
                app:civ_border_width="2dp"
                app:civ_border_color="#FF000000"/>
        <TextView
                android:id="@+id/tvCompanyName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ivCompany"
                android:gravity="center"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/text_regular"
                android:textStyle="bold"
                android:padding="@dimen/margin_medium"/>
        <TextView
                android:id="@+id/tvCompanyAbout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvCompanyName"
                android:textColor="@color/primary_text"
                android:maxLines="4"
                android:ellipsize="end"
                android:textSize="@dimen/text_regular"/>

        <Button
                android:id="@+id/btnGoToWeb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:drawableStart="@drawable/ic_public_24dp"
                style="@style/PrimaryBorderButton"
                android:layout_below="@id/tvCompanyAbout"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/text_regular"
                android:layout_marginTop="@dimen/margin_medium"
                android:text="@string/goToWeb"/>

    </RelativeLayout>
</androidx.cardview.widget.CardView>